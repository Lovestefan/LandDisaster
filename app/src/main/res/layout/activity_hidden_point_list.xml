<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.zx.landdisaster.base.other.ToolBarView
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="隐患点">

    </com.zx.landdisaster.base.other.ToolBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.zx.zxutils.views.ZXSpinner
            android:id="@+id/sp_filter_disastertype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingLeft="20dp"
            android:layout_weight="1">

        </com.zx.zxutils.views.ZXSpinner>

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_color"/>

        <com.zx.zxutils.views.ZXSpinner
            android:id="@+id/sp_filter_scale"
            android:layout_width="0dp"
            android:paddingLeft="20dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

        </com.zx.zxutils.views.ZXSpinner>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color"/>

    <com.zx.zxutils.views.SwipeRecylerView.ZXSwipeRecyler
        android:id="@+id/sr_point_hidden"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.zx.zxutils.views.SwipeRecylerView.ZXSwipeRecyler>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:id="@+id/ll_log_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_log_dateName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="提交时间："
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_log_dateValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_log_deptName"
                android:layout_width="90dp"
                android:gravity="center|left"
                android:layout_height="30dp"
                android:text="提交单位："
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_log_deptValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center|left"
                android:minHeight="30dp"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_log_personName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="提交人："
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_log_personValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:minHeight="30dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_log_noteName"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:text="提交描述："
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_log_noteValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/iv_log_fromapp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/audit_log_fromapp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_below="@id/ll_log_info"
        android:layout_marginTop="10dp"
        android:background="@color/divider_color" />

</RelativeLayout>


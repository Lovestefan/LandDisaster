<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

    <LinearLayout
        android:gravity="center"
        android:background="@drawable/shape_map_btn"
        android:id="@+id/ll_mapBtn"
        android:layout_width="@dimen/map_btn_width"
        android:layout_height="@dimen/map_btn_width"
        android:layout_marginTop="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_mapBtn_bg"
                android:layout_width="@dimen/map_btn_icon_width"
                android:layout_height="@dimen/map_btn_icon_width"/>

            <TextView
                android:id="@+id/tv_mapBtn_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:textColor="@color/text_color_normal"
                android:textSize="@dimen/text_size_smaller"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_mapBtn_num"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginLeft="-10dp"
        android:layout_marginTop="2dp"
        android:layout_toRightOf="@id/ll_mapBtn"
        android:background="@drawable/shape_xapp_num"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/text_size_smaller"
        android:translationZ="2dp"
        android:visibility="gone"/>

</RelativeLayout>

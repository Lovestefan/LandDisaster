<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <com.zx.landdisaster.base.other.ToolBarView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="文件预览">

    </com.zx.landdisaster.base.other.ToolBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <com.zx.zxutils.views.ZXPhotoView
            android:id="@+id/pv_preview_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <com.zx.landdisaster.module.other.func.httpsvideoview.HttpsVideoView
            android:id="@+id/vv_preview_video"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>
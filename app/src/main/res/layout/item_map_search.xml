<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="60dp">

    <TextView
        android:id="@+id/tv_search_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:minWidth="15dp"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_normal"/>

    <ImageView
        android:id="@+id/iv_search_type"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/tv_search_num"
        android:gravity="center"/>

    <View
        android:id="@+id/view_search_divider"
        android:layout_width="1px"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/iv_search_type"
        android:background="@color/gray_de"/>

    <TextView
        android:id="@+id/tv_search_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/view_search_divider"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_color_normal"
        android:textSize="@dimen/text_size_normal"/>

    <TextView
        android:id="@+id/tv_search_addr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/view_search_divider"
        android:ellipsize="end"
        android:singleLine="true"
        android:textColor="@color/text_color_light"
        android:textSize="@dimen/text_size_normal"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_alignParentBottom="true"
        android:background="@color/divider_color"/>

</RelativeLayout>

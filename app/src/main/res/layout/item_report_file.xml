<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/ll_func_itemView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_file_bg"
            android:layout_width="70dp"
            android:layout_centerVertical="true"
            android:layout_height="70dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/iv_file_type"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/iv_file_bg"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/report_file_image"/>

        <TextView
            android:id="@+id/tv_file_text"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/iv_file_type"
            android:layout_centerVertical="true"
            android:textColor="@color/text_color_normal"
            android:textSize="@dimen/text_size_normal"/>

        <ImageView
            android:id="@+id/iv_file_delete"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:background="@drawable/report_file_delete"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"/>
    </LinearLayout>

    <View
        android:id="@+id/view_file_minDivider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@color/divider_color"/>

</LinearLayout>

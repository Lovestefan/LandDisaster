<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <com.zx.landdisaster.base.other.ToolBarView
        android:id="@+id/toolbar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title_text="灾险情">

    </com.zx.landdisaster.base.other.ToolBarView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <com.zx.zxutils.views.ZXSpinner
            android:id="@+id/sp_filter_timeType"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <com.zx.zxutils.views.ZXSpinner
            android:id="@+id/sp_filter_hazardtype"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="@color/divider_color" />

        <com.zx.zxutils.views.ZXSpinner
            android:id="@+id/sp_filter_scale"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/divider_color" />

    <com.zx.zxutils.views.SwipeRecylerView.ZXSwipeRecyler
        android:id="@+id/sr_point_disaster"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </com.zx.zxutils.views.SwipeRecylerView.ZXSwipeRecyler>

</LinearLayout>